{
    "name": "msami/tic-tac-toe",
    "description": "Tic-Tac-Toe php-cli game",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Mina Nabil Sami",
            "email": "mina.nsami@gmail.com"
        }
    ],
    "require": {
        "php": ">=8",
        "ramsey/uuid": "^3.8"
    },
    "autoload": {
        "psr-0": {
            "TicTacToe": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "unit\\TicTacToe\\": "./tests/unit"
        }
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "8"
        },
        "sort-packages": true
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
